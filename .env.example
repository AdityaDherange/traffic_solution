# Environment Variables Template
# Copy this file to .env and fill in your values

# Application Configuration
APP_NAME="Smart Traffic System"
APP_VERSION="2.0"
DEBUG=False

# Default Location (optional)
DEFAULT_LAT=19.0760
DEFAULT_LON=72.8777
DEFAULT_LOCATION_NAME="Mumbai, India"

# API Keys (optional - using free services by default)
# NOMINATIM_API_KEY=your_key_here
# IPGEOLOCATION_API_KEY=your_key_here

# Peak Hour Configuration (24-hour format)
MORNING_PEAK_START=8
MORNING_PEAK_END=11
EVENING_PEAK_START=17
EVENING_PEAK_END=21

# Traffic Thresholds
LOW_TRAFFIC_THRESHOLD=30
MEDIUM_TRAFFIC_THRESHOLD=80

# ML Model Paths (optional)
# TRAFFICNET_MODEL_PATH=data/models/trafficnet_image_model.h5
# YOLO_MODEL_PATH=data/models/yolov8n.pt

# Database (optional - for production)
# DATABASE_URL=sqlite:///traffic_data.db

# Security (for production)
# SECRET_KEY=your_secret_key_here
# SESSION_TIMEOUT=3600

# Feature Flags
ENABLE_VOICE=True
ENABLE_HEATMAP=True
ENABLE_ROUTE_PLANNING=True

# API Timeouts (seconds)
API_TIMEOUT=15
